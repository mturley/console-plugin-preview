{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "dist",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "paths": {
      "@app/*": ["src/app/*"],
      "@assets/*": ["node_modules/@patternfly/react-core/dist/styles/assets/*"],
      "@console/internal": ["node_modules/console/frontend/public"],
      "@console/internal/*": ["node_modules/console/frontend/public/*"],
      "@console/internal/module/k8s/label-selector": ["node_modules/console/frontend/public/module/k8s/label-selector"],
      "@console/shared": ["node_modules/console/frontend/packages/console-shared"],
      "@console/shared/*": ["node_modules/console/frontend/packages/console-shared/*"],
      "@console/plugin-sdk": ["node_modules/console/frontend/packages/console-plugin-sdk"],
      "@console/plugin-sdk/*": ["node_modules/console/frontend/packages/console-plugin-sdk/*"],
      "@console/dynamic-plugin-sdk": ["node_modules/console/frontend/packages/console-dynamic-plugin-sdk"],
      "@console/dynamic-plugin-sdk/*": ["node_modules/console/frontend/packages/console-dynamic-plugin-sdk/*"],
      "@console/operator-lifecycle-manager": ["node_modules/console/frontend/packages/operator-lifecycle-manager"],
      "@console/operator-lifecycle-manager/*": ["node_modules/console/frontend/packages/operator-lifecycle-manager/*"],
      "@console/active-plugins": ["console-dep-stub/active-plugins"],
      "@console/app": ["node_modules/console/frontend/packages/console-app"],
      "@console/app/*": ["node_modules/console/frontend/packages/console-app/*"],
      "@console/patternfly": ["node_modules/console/frontend/packages/patternfly"],
      "@console/patternfly/*": ["node_modules/console/frontend/packages/patternfly/*"]
    },
    "importHelpers": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.jsx",
    "**/*.js"
  ],
  "exclude": ["node_modules"]
}
